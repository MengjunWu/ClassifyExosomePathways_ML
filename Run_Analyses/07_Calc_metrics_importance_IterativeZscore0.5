filedir=""
usage() {
	echo
	echo ${0##/*}" Usage:"
	echo
	echo "${0##/} OPTIONS -f FILE"
	echo "[-f N]        inputfile"
	exit
}


while getopts f: opt; do
	case ${opt} in
